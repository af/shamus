{
  "name": "shamus",
  "description": "node-webkit app that watches a directory and runs tasks when files change",
  "repository": {
    "type": "git",
    "url": "git://github.com/af/shamus.git"
  },
  "bin": {
    "shamus": "./bin/shamus"
  },
  "scripts": {
    "start": "nodewebkit",
    "test": "tape tests/*.js"
  },
  "dependencies": {
    "backbone": "1.0",
    "backprop": "0.4.0",
    "littledom": "0.0.2",
    "node-watch": "0.3.4",
    "swig": "1.1.0",
    "nodewebkit": "0.9.2",
    "tap-extras": "0.0.1",
    "underscore": "1.5.1"
  },
  "devDependencies": {
    "tape": "2.3.2"
  },
  "main": "index.html",
  "window": {
    "title": "shamus",
    "toolbar": false,
    "frame": true,
    "show": false
  },
  "version": "0.0.6"
}
