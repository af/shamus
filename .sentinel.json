{
    "window": {
        "alwaysOnTop": true,
        "width": 400,
        "top": 0,
        "right": 0
    },
    "tasks": [
        {
            "name": "Mocha tests (sentinel)",
            "command": "mocha tests -R tap",
            "parser": "tap",
            "watchMatcher": "\\.js$"
        },
        {
            "name": "Stylus (sentinel)",
            "command": "stylus css",
            "parser": "exitcode",
            "watchMatcher": "\\.styl$"
        },
        {
            "name": "JSHint (Sentinel)",
            "command": "jshint js",
            "parser": "exitcode",
            "watchMatcher": "\\.js$"
        }
    ]
}
